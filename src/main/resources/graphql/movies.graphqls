type Movie {
    id: ID!
    title: String
    length: Int
}

extend type Query {
    movies: [Movie]
    getMovie(id: ID): Movie
}

extend type Mutation {
    createMovie(title: String!, length: Int!): Movie!
    updateMovie(id: ID!, title: String!, length: Int!): Movie!
    deleteMovie(id: ID!): Boolean
}